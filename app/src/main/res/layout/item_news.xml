<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <!--头部模板,照抄就可以了-->
    <data>
        <import type="android.text.TextUtils" />
        <variable
            name="DataBean"
            type="wb.com.cctm.bean.DataBean" />
    </data>
    <LinearLayout
        android:id="@+id/ll_item"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/logo"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="APP版本更新"
                    android:textSize="13dp"
                    android:textColor="@color/main_bottom_text_color_selector"/>
                <TextView
                    android:gravity="start"
                    android:id="@+id/tv_content"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="为迎接2018CMCC全球区块链交流峰会杭州站的盛大开幕，平台将迎来重磅更新至2.0版本"
                    android:textSize="9dp"
                    android:lineSpacingExtra="5dp"
                    android:maxLines="2"
                    android:textColor="@color/white"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:gravity="end"
                        android:id="@+id/tv_time"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="9dp"
                        android:text="2018年4月22 17:23:43"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_singer"></LinearLayout>
    </LinearLayout>
</layout>
